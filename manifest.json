{
  "manifest_version": 3,
  "name": "YouTube Comment Scraper and Summarizer",
  "version": "1.0",
  "description": "Scrape, analyze, and summarize YouTube comments",
  "permissions": ["activeTab", "ai.summarizer", "ai.assistant"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["styles.css"]
    }
  ]
}
